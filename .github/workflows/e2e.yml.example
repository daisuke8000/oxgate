# GitHub Actions E2E テスト設定例
# .github/workflows/e2e.yml としてコピーして使用

name: E2E Tests

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

jobs:
  e2e-tests:
    name: Playwright E2E Tests
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Bun
        uses: oven-sh/setup-bun@v1
        with:
          bun-version: latest
      
      - name: Install dependencies
        run: |
          cd oxgate-web
          bun install
      
      - name: Install Playwright browsers
        run: |
          cd oxgate-web
          bunx playwright install --with-deps chromium
      
      - name: Run E2E tests
        run: |
          cd oxgate-web
          bun run test:e2e
        env:
          CI: true
      
      - name: Upload Playwright Report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: playwright-report
          path: oxgate-web/playwright-report/
          retention-days: 30
      
      - name: Upload Test Results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: test-results
          path: oxgate-web/test-results/
          retention-days: 7

  # オプション: 統合テスト (実際のバックエンドを使用)
  integration-tests:
    name: Integration E2E Tests
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'
    
    services:
      postgres:
        image: postgres:17
        env:
          POSTGRES_DB: oxgate
          POSTGRES_USER: oxgate
          POSTGRES_PASSWORD: password
        options: >-
          --health-cmd pg_isready
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5
        ports:
          - 5432:5432
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
      
      - name: Setup Rust
        uses: dtolnay/rust-toolchain@stable
      
      - name: Setup Bun
        uses: oven-sh/setup-bun@v1
      
      - name: Start Hydra
        run: |
          docker-compose up -d hydra
          docker-compose logs hydra
      
      - name: Build and start oxgate-api
        run: |
          cargo build --release
          ./target/release/oxgate-api &
        env:
          DATABASE_URL: postgres://oxgate:password@localhost/oxgate
          HYDRA_ADMIN_URL: http://localhost:4445
      
      - name: Install frontend dependencies
        run: |
          cd oxgate-web
          bun install
          bunx playwright install --with-deps chromium
      
      - name: Start oxgate-web
        run: |
          cd oxgate-web
          bun run build
          bun run start &
        env:
          NEXT_PUBLIC_API_URL: http://localhost:8080
      
      - name: Wait for services
        run: |
          timeout 60 bash -c 'until curl -f http://localhost:3000 && curl -f http://localhost:8080/api/health; do sleep 2; done'
      
      - name: Run integration E2E tests
        run: |
          cd oxgate-web
          INTEGRATION_MODE=true bun run test:e2e
        env:
          PLAYWRIGHT_BASE_URL: http://localhost:3000
      
      - name: Upload Integration Test Report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: integration-playwright-report
          path: oxgate-web/playwright-report/
          retention-days: 30
